@model Cali_Remote_Pc.Entity.Action
<!-- Modal -->
<div class="modal fade" id="add-client" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addContactLabel">New Action</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-controller="Default" asp-action="PostClientPartialView" method="post">
                    <div class="form-group">
                        <label>Name</label>
                        <input name="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Command">Command</label>
                        <input name="Command" class="form-control" />
                        <span asp-validation-for="Command" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label class="radio-inline mr-2">Attach Now: </label>
                        <label class="radio-inline mr-2"><input type="radio" name="IsActive" value="false" checked/> No</label>
                        <label class="radio-inline "><input type="radio" name="IsActive" value="true"  /> Yes</label>
                        
                        
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal" data-url="@Url.Action("AddAction")">Save</button>
            </div>
        </div>
    </div>
</div>